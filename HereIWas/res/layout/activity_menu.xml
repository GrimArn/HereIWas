<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/LogOutButton" >

        <ImageView
            android:id="@+id/imageViewAmis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="152dp"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@+id/imageViewMesInfos"
            android:src="@drawable/fleuramis" />

        <ImageView
            android:id="@+id/imageViewActu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageViewJsuisIci"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="36dp"
            android:src="@drawable/fleuractu" />

        <ImageView
            android:id="@+id/imageViewMesInfos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/imageViewActu"
            android:layout_below="@+id/imageViewJsuisIci"
            android:src="@drawable/fleurmesinfos" />

        <ImageView
            android:id="@+id/imageViewJsuisIci"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageViewAmis"
            android:layout_alignLeft="@+id/imageViewAmis"
            android:layout_marginBottom="21dp"
            android:src="@drawable/fleurjsuisici" />

    </RelativeLayout>

    <Button
        android:id="@+id/LogOutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="11dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/custom_button_selector"
        android:gravity="center"
        android:text="@string/deconnexion"
        android:textColor="#ffffff"
        android:textSize="20sp" />

</RelativeLayout>